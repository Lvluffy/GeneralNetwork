<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="登录信息" />

    <Button
        android:id="@+id/btn_login_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:text="@string/login_1" />

    <Button
        android:id="@+id/btn_login_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:text="@string/login_2" />

    <Button
        android:id="@+id/btn_login_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:text="@string/login_3" />

    <Button
        android:id="@+id/btn_login_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:text="@string/login_4" />

</LinearLayout>
